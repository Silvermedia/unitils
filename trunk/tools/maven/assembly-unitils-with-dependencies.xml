<assembly>
    <id>with-dependencies</id>
    <formats>
        <format>zip</format>
    </formats>

    <moduleSets>
        <!-- unitils -->
        <moduleSet>
            <includes>
                <include>org.unitils:unitils</include>
            </includes>
            <sources>
                <fileSets>
                    <fileSet>
                        <includes>
                            <include>pom.xml</include>
                            <include>src/main/**</include>
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
            <binaries>
                <outputDirectory>unitils</outputDirectory>
                <dependencySets>
                    <dependencySet>
                        <useProjectArtifact>false</useProjectArtifact>
                        <outputDirectory>unitils/lib</outputDirectory>
                    </dependencySet>
                </dependencySets>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>

