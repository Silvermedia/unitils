<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

     <bean id="purchaseDao" class="org.unitils.sample.eshop.dao.PurchaseDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="productDao" class="org.unitils.sample.eshop.dao.ProductDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="userDao" class="org.unitils.sample.eshop.dao.UserDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource"/>
		<property name="annotatedClasses">
			<list>
				<value>org.unitils.sample.eshop.model.User</value>
                <value>org.unitils.sample.eshop.model.Product</value>
                <value>org.unitils.sample.eshop.model.ProductPrice</value>
                <value>org.unitils.sample.eshop.model.ProductPrice$PriceTableItem</value>
                <value>org.unitils.sample.eshop.model.Purchase</value>
                <value>org.unitils.sample.eshop.model.PurchaseItem</value>
                <value>org.unitils.sample.eshop.model.PurchaseItem</value>
            </list>
		</property>
		<property name="hibernateProperties">
			<value>
				hibernate.dialect=org.hibernate.dialect.HSQLDialect
				hibernate.show_sql=true
                hibernate.default_schema=eshop
            </value>
		</property>
	</bean>

    <!--bean id="dataSource" class="org.unitils.database.UnitilsDataSource" /-->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:hsql://localhost/eshop"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

</beans>