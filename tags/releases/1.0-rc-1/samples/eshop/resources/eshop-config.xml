<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="productService" class="org.unitils.sample.eshop.service.ProductService">
        <property name="productDao" ref="productDao"/>
    </bean>

    <bean id="discountDao" class="org.unitils.sample.eshop.dao.DiscountDao">
        <property name="sessionFactory" ref="sessionFactoryBean"/>
    </bean>
    <bean id="productDao" class="org.unitils.sample.eshop.dao.ProductDao">
        <property name="sessionFactory" ref="sessionFactoryBean"/>
    </bean>
    <bean id="userDao" class="org.unitils.sample.eshop.dao.UserDao">
        <property name="sessionFactory" ref="sessionFactoryBean"/>
    </bean>

    <bean id="sessionFactoryBean" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource"/>
		<property name="annotatedClasses">
			<list>
				<value>org.unitils.sample.eshop.model.User</value>
                <value>org.unitils.sample.eshop.model.Product</value>
                <value>org.unitils.sample.eshop.model.ProductPrice</value>
                <value>org.unitils.sample.eshop.model.ProductPrice$PriceTableItem</value>
                <value>org.unitils.sample.eshop.model.ShoppingBasket</value>
                <value>org.unitils.sample.eshop.model.ShoppingBasketItem</value>
                <value>org.unitils.sample.eshop.model.ShoppingBasketItem</value>
            </list>
		</property>
		<property name="hibernateProperties">
			<value>
				hibernate.dialect=org.hibernate.dialect.HSQLDialect
				hibernate.show_sql=true
			</value>
		</property>
	</bean>

    <bean id="dataSource" class="org.unitils.database.UnitilsDataSource" />

</beans>