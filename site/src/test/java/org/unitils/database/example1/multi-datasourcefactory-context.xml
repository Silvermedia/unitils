<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="hsqldbDataSource" class="org.unitils.database.UnitilsDataSourceFactoryBean">
        <property name="databaseName" value="database1"/>
    </bean>
    <bean id="oracleDataSource" class="org.unitils.database.UnitilsDataSourceFactoryBean">
        <property name="databaseName" value="database2"/>
    </bean>

    <bean id="hsqlTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="hsqldbDataSource"/>
    </bean>
    <bean id="oracleTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="oracleDataSource"/>
    </bean>

</beans>